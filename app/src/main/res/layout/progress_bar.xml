<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_layout"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_toLeftOf="@+id/progress_bar_btCancel">
        <RelativeLayout
                android:id="@+id/progress_rlProgressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_small"
                >
            <TextView
                    android:id="@+id/progress_bar_tvPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    />
            <ProgressBar
                    android:id="@+id/progress_bar_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:progress="0"
                    android:max="100"
                    android:layout_below="@+id/progress_bar_tvPercentage"
                    android:layout_centerVertical="true"
                    />
            <TextView
                    android:id="@+id/progress_bar_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/progress_bar_progressBar"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/progress_rlVideoInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_rlProgressContainer"
                android:padding="@dimen/spacing_small">
            <ImageView
                    android:id="@+id/progress_ivAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    />
            <TextView
                    android:id="@+id/progress_tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/progress_ivAvatar"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:maxLines="2"
                    android:layout_centerVertical="true"
                    android:ellipsize="marquee"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>
    <ImageButton
            android:id="@+id/progress_bar_btCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete"
            android:layout_centerVertical="true"
            android:background="@null"
            />
</RelativeLayout>