<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/search_normal_fragment_rlAdvancedSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:background="@color/white"
                android:padding="@dimen/spacing_small"
                android:animateLayoutChanges="true"
                android:layout_below="@+id/search_normal_fragment_rlSearch"
        >
    <com.rey.material.widget.Spinner
            android:id="@+id/search_normal_fragment_spChoseHost"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:popupBackground="@color/white"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
            app:spn_dividerAnimDuration="@android:integer/config_shortAnimTime"
            app:spn_arrowColor="@color/black"
            app:spn_arrowSize="8dp"
            app:spn_arrowPadding="@dimen/spacing_normal"
            />

    <com.rey.material.widget.Spinner
            android:id="@+id/search_normal_fragment_spCountry"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:popupBackground="@color/white"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
            app:spn_dividerAnimDuration="@android:integer/config_shortAnimTime"
            app:spn_arrowColor="@color/black"
            app:spn_arrowSize="8dp"
            app:spn_arrowPadding="@dimen/spacing_normal"
            />

    <com.rey.material.widget.Spinner
            android:id="@+id/search_normal_fragment_spOrder"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@+id/search_normal_fragment_spChoseHost"
            android:popupBackground="@color/white"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
            app:spn_dividerAnimDuration="@android:integer/config_shortAnimTime"
            app:spn_arrowColor="@color/black"
            app:spn_arrowSize="8dp"
            app:spn_arrowPadding="@dimen/spacing_normal"
            />
    <com.rey.material.widget.Spinner
            android:id="@+id/search_normal_fragment_spType"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@+id/search_normal_fragment_spCountry"
            android:layout_alignParentRight="true"
            android:popupBackground="@color/white"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
            app:spn_dividerAnimDuration="@android:integer/config_shortAnimTime"
            app:spn_arrowColor="@color/black"
            app:spn_arrowSize="8dp"
            app:spn_arrowPadding="@dimen/spacing_normal"
            />
    <com.rey.material.widget.Spinner
            android:id="@+id/search_normal_fragment_spVideoDefinition"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@+id/search_normal_fragment_spOrder"
            android:layout_alignParentRight="true"
            android:popupBackground="@color/white"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
            app:spn_dividerAnimDuration="@android:integer/config_shortAnimTime"
            app:spn_arrowColor="@color/black"
            app:spn_arrowSize="8dp"
            app:spn_arrowPadding="@dimen/spacing_normal"
            />

    <com.rey.material.widget.Spinner
            android:id="@+id/search_normal_fragment_spVideoDuration"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@+id/search_normal_fragment_spType"
            android:popupBackground="@color/white"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
            app:spn_dividerAnimDuration="@android:integer/config_shortAnimTime"
            app:spn_arrowColor="@color/black"
            app:spn_arrowSize="8dp"
            app:spn_arrowPadding="@dimen/spacing_normal"
            />

    <com.rey.material.widget.Spinner
            android:id="@+id/search_normal_fragment_spVideoType"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_below="@+id/search_normal_fragment_spVideoDuration"
            android:popupBackground="@color/white"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:rd_style="@style/Material.Drawable.Ripple.Wave.Light"
            app:spn_dividerAnimDuration="@android:integer/config_shortAnimTime"
            app:spn_arrowColor="@color/black"
            app:spn_arrowSize="8dp"
            app:spn_arrowPadding="@dimen/spacing_normal"
            />
</RelativeLayout>