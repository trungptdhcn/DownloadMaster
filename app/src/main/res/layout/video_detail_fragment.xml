<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:id="@+id/video_detail_fragment_rlContainer">
    <RelativeLayout
            android:id="@+id/video_detail_fragment_rlCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp">
        <ImageView
                android:id="@+id/video_detail_fragment_ivCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:background="@drawable/no_cover"/>
        <ImageButton
                android:id="@+id/video_detail_fragment_btDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/spacing_small"
                android:background="@drawable/download_background"/>
    </RelativeLayout>
    <TextView
            android:id="@+id/video_detail_fragment_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_21"
            android:layout_below="@+id/video_detail_fragment_rlCover"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:layout_margin="@dimen/spacing_small"
            />
    <!--<ScrollView-->
            <!--android:id="@+id/SCROLLER_ID"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:scrollbars="vertical"-->
            <!--android:fillViewport="true">-->
    <TextView
            android:id="@+id/video_detail_fragment_tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_21"
            android:textSize="@dimen/text_size_normal"
            android:layout_below="@+id/video_detail_fragment_tvTitle"
            android:layout_margin="@dimen/spacing_small"
            android:scrollbars="vertical"
            />
    <ProgressBar
            android:id="@+id/video_detail_fragment_progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    <!--</ScrollView>-->
</RelativeLayout>
