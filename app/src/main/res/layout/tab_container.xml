<com.ogaclejapan.smarttablayout.SmartTabLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tab_indicator_menu_viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_width"
        app:stl_dividerColor="@color/red_simi"
        app:stl_dividerThickness="0dp"
        app:stl_defaultTabTextColor="@color/white"
        app:stl_distributeEvenly="true"
        app:stl_indicatorColor="@color/orange"
        app:stl_indicatorCornerRadius="0dp"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="5dp"
        app:stl_underlineColor="@color/red_simi"
        app:stl_underlineThickness="0dp"
        app:stl_customTabTextLayoutId="@layout/custom_tab_item"
        app:stl_customTabTextViewId="@id/custom_text"
        android:layout_gravity="center_horizontal|center_vertical"
        />