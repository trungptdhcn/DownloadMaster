<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
                android:id="@+id/list_fragment_lvYoutube"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/spacing_small">
        </ListView>
        <com.google.android.gms.ads.AdView
                android:id="@+id/list_fragment_native_adsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                android:layout_gravity="bottom"
                ads:adUnitId="@string/download_master_native_ads"
                >
        </com.google.android.gms.ads.AdView>
        <com.melnykov.fab.FloatingActionButton
                android:id="@+id/list_fragment_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/arrow_up"
                android:layout_gravity="bottom|right"
                />
    </FrameLayout>
    <ProgressBar
            android:id="@+id/list_fragment_progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
    <ImageView
            android:id="@+id/list_fragment_ivNotFund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/not_found"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
</RelativeLayout>