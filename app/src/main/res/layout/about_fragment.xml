<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:id="@+id/about_fragment_tvContactUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact us"
            android:layout_centerInParent="true"
            />
    <TextView
            android:id="@+id/about_fragment_tvEmailContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="t3mstudio@hotmail.com"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/about_fragment_tvContactUS"
            android:textColor="@color/blue"/>
    <TextView
            android:id="@+id/about_fragment_tvAppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/about_fragment_tvEmailContact"
            android:textColor="@color/blue"/>

</RelativeLayout>